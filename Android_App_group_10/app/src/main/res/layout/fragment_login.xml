<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.LoginFragment"
        android:layout_marginTop="30dp"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginIdET"
                android:layout_marginBottom="20dp"
                android:hint="User Id"
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/ic_profile" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginIdET"
                android:id="@+id/loginPasswordET"
                android:layout_marginBottom="20dp"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="12dp"
                android:hint="Password"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginCaptainCB"
                android:hint="Captain"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/loginPasswordET"
                android:layout_marginBottom="40dp"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keepLoggedInCB"
                android:hint="Keep logged in"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/loginPasswordET"
                android:layout_marginBottom="40dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginBtn"
                android:layout_marginBottom="20dp"
                android:text="Login"
                android:background="@drawable/rounded_background_primary"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/loginCaptainCB"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/loginBtn"
                android:text="Forgot Password?"
                android:layout_marginBottom="40dp"/>

        </RelativeLayout>
    </FrameLayout>
</ScrollView>